<!--
  Ivy settings file for use with the build
-->
<ivysettings>

    <settings
        defaultResolver="libs-and-build"/>

    <resolvers>
        <chain name="libs-and-build">
            <filesystem name="localfile" checksums="">
                <artifact pattern="lib/repository/[organisation]/[artifact]-[revision].[ext]"/>
                <ivy pattern="lib/repository/[organisation]/[module]-ivy-[revision].xml"/>
            </filesystem>
            <filesystem name="shared" checksums="">
                <artifact pattern="build/repository/[artifact]-[revision].[ext]"/>
                <ivy pattern="build/repository/[module]-ivy-[revision].xml"/>
            </filesystem>
        </chain>
        <chain name="libraries">
            <ibiblio name="maven2" m2compatible="true" checksums="md5,sha1"/>
        </chain>
    </resolvers>
    
    <!-- 
      Note that this can cause an NPE if used when installing dependencies
    -->
    <caches useOrigin="true"/>
</ivysettings>
