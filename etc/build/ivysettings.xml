-->
<ivysettings>

    <settings
        defaultResolver="libs-and-build"/>
	<credentials host="apim-artifactory-poc.l7tech.com" realm="Artifactory Realm" username="system.user" passwd="AP6krWWQbjzdgzpD"/>
