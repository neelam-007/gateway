    <env-entry>
        <description>List of concrete ServiceResolver implementations</description>
        <env-entry-name>ServiceResolvers</env-entry-name>
        <env-entry-value>
            com.l7tech.service.resolution.SoapActionResolver
            com.l7tech.service.resolution.UrnResolver
        </env-entry-value>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>

</web-app>
