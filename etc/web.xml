        <user-data-constraint>
            <description>SSL required</description>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name></realm-name>
    </login-config> -->

    <env-entry>
        <description>List of concrete ServiceResolver implementations</description>
        <env-entry-name>ServiceResolvers</env-entry-name>
        <env-entry-value>
            com.l7tech.service.resolution.SoapActionResolver
            com.l7tech.service.resolution.UrnResolver
            com.l7tech.service.resolution.HttpUriResolver
        </env-entry-value>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>

    <env-entry>
        <description>Log level for the mem handler and catalina.out.</description>
        <!-- hint: INFO for normal use, FINE or FINER for debug -->
        <env-entry-name>SsgLogLevel</env-entry-name>
        <env-entry-value>INFO</env-entry-value>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>

</web-app>
