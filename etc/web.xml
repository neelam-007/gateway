<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<!-- The ssg (aka UneasyRooster) web application DD -->
<web-app>
    <display-name>Layer7 Secure Span Gateway</display-name>

    <!-- ssg boot servlet properties -->
    <servlet>
        <servlet-name>boot</servlet-name>
        <servlet-class>com.l7tech.server.BootServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>PolicyServlet</servlet-name>
        <servlet-class>com.l7tech.policy.server.PolicyServlet</servlet-class>
        <init-param>
            <param-name>CertPath</param-name>
            <param-value>../../kstores/ssg.cer</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>CSRServlet</servlet-name>
        <servlet-class>com.l7tech.identity.cert.CSRHandler</servlet-class>
        <init-param>
            <param-name>RootKeyStore</param-name>
            <param-value>/usr/java/jakarta-tomcat-4.1.24/kstores/ssgroot</param-value>
        </init-param>
        <init-param>
            <param-name>RootKeyStorePasswd</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>SoapMessageProcessingServlet</servlet-name>
        <servlet-class>com.l7tech.server.SoapMessageProcessingServlet</servlet-class>

        <init-param>
            <param-name>PolicyServletUri</param-name>
            <param-value>/ssg/policy/disco.modulator?serviceoid=</param-value>
        </init-param>
    </servlet>

    <!-- Axis servlet properties -->
    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <display-name>Apache-Axis Servlet</display-name>
        <servlet-class>
          org.apache.axis.transport.http.AxisServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <display-name>Axis Admin Servlet</display-name>
        <servlet-class>
          org.apache.axis.transport.http.AdminServlet
        </servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SOAPMonitorService</servlet-name>
        <display-name>SOAPMonitorService</display-name>
        <servlet-class>
          org.apache.axis.monitor.SOAPMonitorService
        </servlet-class>
        <init-param>
            <param-name>SOAPMonitorPort</param-name>
            <param-value>5001</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>SoapMessageProcessingServlet</servlet-name>
        <url-pattern>/ssg/servlet/soap</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SoapMessageProcessingServlet</servlet-name>
        <url-pattern>/ssg/soap</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/ssg/servlet/AxisServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PolicyServlet</servlet-name>
        <!--
        NB: Update the PolicyServletUri <init-param> in the SoapMessageProcessingServlet
        above when you change this <url-pattern>!
        -->
        <url-pattern>/ssg/policy/disco.modulator/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CSRServlet</servlet-name>
        <url-pattern>/csr/*</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>*.jws</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/ssg/services/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SOAPMonitorService</servlet-name>
        <url-pattern>/ssg/SOAPMonitor</url-pattern>
    </servlet-mapping>

    <!-- uncomment this if you want the admin servlet -->
    <!-- -->
     <servlet-mapping>
       <servlet-name>AdminServlet</servlet-name>
       <url-pattern>/ssg/servlet/AdminServlet</url-pattern>
     </servlet-mapping>

    <welcome-file-list id="WelcomeFileList_1">
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.jws</welcome-file>
    </welcome-file-list>

    <!-- enforce SSL in the admin Web service -->
