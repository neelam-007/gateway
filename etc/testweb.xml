<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<!-- The ssg (aka UneasyRooster) web application DD -->
<web-app>
    <display-name>Layer7 Secure Span Gateway Test Servlets</display-name>

    <servlet>
        <servlet-name>echo</servlet-name>
        <servlet-class>com.l7tech.test.servlets.EchoServlet</servlet-class>
        <init-param>
            <param-name>spoolPath</param-name>
            <param-value>/ssg/var/attachments</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>echo</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
