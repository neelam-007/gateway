#
# Useful constants
BASIC=1
DETAIL=2
EVERYTHING=3

#
#  Library of routines supporting collector scripts

function preModule
{

    echo "**********"
    echo "* START MODULE: $1"
    echo "*"
}

function postModule
{
    echo "*"
    echo "* END MODULE: $1"
    echo "**********"
    echo
}

function logCommand
{
	echo "|- COMMAND: $*"
}

function logAndRunCmd
{
    logCommand "$*"
    eval "$*"
}

function beginCompression
{
    echo "**********"
    echo "* BEGIN COMPRESSION OF ALL COLLECTED DATA"
    echo "*"
}

function endCompression
{
    echo "**********"
    echo "*"
    echo "* COMPLETE: Final compressed output available at $*"
    echo "*"
    echo "**********"
}

# obtain and set SSG PID
function setGatewayPID
{
    GATEWAYPID=$(ps awwx | grep Gateway.jar | grep -v grep | awk '{print $1}')
    if [ -z "$GATEWAYPID" ]
    then
        echo "Error: Cannot get Gateway PID"
    fi
}

