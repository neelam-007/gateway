            <ref bean="serverConfig"/>
        </property>
    </bean>

    <!-- service admin servant -->
    <bean id="serviceAdmin" class="com.l7tech.server.service.ServiceAdminImpl">
        <constructor-arg>
            <ref bean="accessManager"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="licenseManager"/>
