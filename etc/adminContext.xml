        <property name="identityProviderFactory">
            <ref bean='identityProviderFactory'/>
        </property>
        <property name="authorizer">
            <ref bean='authorizer'/>
        </property>
    </bean>

    <!-- audit admin servant -->
    <bean id="auditAdmin" class="com.l7tech.server.audit.AuditAdminImpl">
