[mysqld]
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
innodb_data_file_path=ibdata:1024M:autoextend
innodb_buffer_pool_size=256M
set-variable = innodb_additional_mem_pool_size=10M
innodb_flush_log_at_trx_commit=1
set-variable = max_connect_errors=200000
key_buffer_size=128M
max_connections=1024
low-priority-updates=0
memlock=1
set-variable = interactive_timeout=864000
# 10 days before it disconnects
# database cluster items. comment all out for single ssg
log-bin
log-slave-update
# uncomment the next item on 1st db master server
#server-id=1

# uncomment the next item on 2nd db master servers
#server-id=2

[mysql.server]
bind-address=0.0.0.0
user=mysql
basedir=/var/lib

[safe_mysqld]
err-log=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid
