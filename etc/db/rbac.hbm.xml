<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.l7tech.common.security.rbac">
    <class name="Role" table="rbac_role" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>
        <version name="version" column="version" type="integer"/>

        <property name="name" type="string" length="128" unique="true" not-null="true"/>
        <property name="description" type="string" length="255" unique="false" not-null="false"/>

        <set name="permissions" inverse="true" cascade="all-delete-orphan" lazy="false">
            <key column="role_oid" not-null="true"/>
            <one-to-many class="Permission"/>
        </set>

        <set name="userAssignments" inverse="true" cascade="all-delete-orphan" lazy="false">
            <key column="role_oid" not-null="true"/>
            <one-to-many class="UserRoleAssignment"/>
        </set>
    </class>

    <class name="Permission" table="rbac_permission" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>
        <version name="version" column="version" type="integer"/>

        <many-to-one name="role" column="role_oid" not-null="true" lazy="false"/>
        <property name="operationTypeName" column="operation_type" length="16" not-null="true"/>
        <property name="otherOperationName" column="other_operation" type="string" not-null="false"/>
        <property name="entityTypeName" column="entity_type" type="string" not-null="true"/>
        <set name="scope" inverse="true" cascade="all-delete-orphan" lazy="false">
            <key column="permission_oid" not-null="true"/>
            <one-to-many class="ScopePredicate"/>
        </set>
    </class>

    <!-- mapped because it's the generic type of a set -->
    <class name="ScopePredicate" table="rbac_predicate" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>
        <version name="version" column="version" type="integer"/>

        <many-to-one name="permission" column="permission_oid" not-null="true" lazy="false"/>
    </class>

    <joined-subclass name="ObjectIdentityPredicate" extends="ScopePredicate" table="rbac_predicate_oid" lazy="false">
        <key column="objectid"/>
        <property name="targetEntityId" column="entity_id" type="string" length="255" not-null="true"/>
    </joined-subclass>

    <joined-subclass name="AttributePredicate" extends="ScopePredicate" table="rbac_predicate_attribute" lazy="false">
        <key column="objectid"/>
        <property name="attribute" type="string" not-null="true"/>
        <property name="value" type="string"/>
    </joined-subclass>

    <!-- superclass does not need to be mapped; it's not a foreign key -->
    <class name="UserRoleAssignment" table="rbac_assignment" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>
        <properties name="noname" unique="true">
            <property name="providerId" column="provider_oid" type="long" not-null="true"/>
            <many-to-one name="role" column="role_oid" not-null="true" lazy="false"/>
            <property name="userId" column="user_id" type="string" not-null="true"/>
        </properties>
    </class>

</hibernate-mapping>
