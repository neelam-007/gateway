<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- $Id$ -->

<!--
  This is the Hibernate mapping file for identity mapping configuration records.
-->

<hibernate-mapping package="com.l7tech.identity.mapping">
    <class name="AttributeConfig" table="attributes" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>

        <property name="name" type="string"/>
        <property name="shortName" column="short_name" type="string"/>
        <property name="description" type="string"/>

        <set name="identityMappings" cascade="all">
            <key column="attribute_oid"/>
            <one-to-many class="IdentityMapping"/>
        </set>

        <set name="securityTokenMappings" cascade="all">
            <key column="attribute_oid"/>
            <one-to-many class="SecurityTokenMapping"/>
        </set>
    </class>

    <class name="IdentityMapping" table="attribute_identity" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>

        <property name="name" type="string"/>
        <property name="providerOid" column="identity_provider_oid" type="long"/>
        <property name="validForUsers" column="users" type="boolean"/>
        <property name="validForGroups" column="groups" type="boolean"/>
        <property name="searchable" type="boolean"/>
        <property name="unique" type="boolean"/>
        <property name="multivalued" type="boolean"/>
        <many-to-one name="attributeConfig"/>
    </class>

    <class name="SecurityTokenMapping" table="attribute_token" lazy="false">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>

        <property name="name" type="string"/>
        <property name="tokenType" column="token_type" type="int"/>
        
        <many-to-one name="attributeConfig"/>
    </class>

</hibernate-mapping>