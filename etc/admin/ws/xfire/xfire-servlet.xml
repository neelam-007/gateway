<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/Service">
                    <ref bean="serviceAdminWS"/>
                </entry>
            </map>
        </property>
    </bean>

    <!-- Declare a parent bean with all properties common to both services -->
    <bean id="serviceAdminWS" class="org.codehaus.xfire.spring.remoting.XFireExporter">
        <property name="name">
            <value>Service</value>
        </property>
        <property name="namespace">
            <value>http://ns.l7tech.com/SecureSpan/admin/service</value>
        </property>
        <property name="serviceFactory">
            <ref bean="xfire.serviceFactory"/>
        </property>
        <property name="xfire">
            <ref bean="xfire"/>
        </property>
        <property name="service">
            <ref bean="serviceAdmin"/>
        </property>
        <property name="serviceInterface">
            <value>com.l7tech.service.ServiceAdminPublic</value>
        </property>
    </bean>
</beans>
