<?xml version="1.0" encoding="UTF-8"?>
<optionSet id="ems">
    <description>
----------------------------------------------------------------------
Enterprise Service Manager
----------------------------------------------------------------------</description>
    <prompt>
----------------------------------------------------------------------
Reset Enterprise Service Manager User Account
----------------------------------------------------------------------
At any time type "quit" to quit.</prompt>


    <!--
      Options for Administrative user account configuration
    -->
    <option id="admin-user" group="admin" type="USERNAME" order="100" updatable="false" name="ESM Username" minlength="3" maxlength="128">
        <configName>admin.user</configName>
        <description>ESM Username</description>
        <prompt>Enter the ESM administrative user (3-128 characters).</prompt>
    </option>
    <option id="admin-pass" group="admin" type="PASSWORD" order="101" updatable="false" confirmed="true" name="ESM Password" minlength="6" maxlength="32">
        <configName>admin.pass</configName>
        <description>ESM Password</description>
        <prompt>Enter the ESM administrative password (6-32 characters).</prompt>
    </option>

</optionSet>
