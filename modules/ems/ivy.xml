<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0">
    <info organisation="com.l7tech"
          module="layer7-ems"
          status="integration"
            >
    </info>
    <configurations
            defaultconfmapping="compile->default; core->default; runtime->default; test->default; optional->default">
        <conf name="core" description="Core dependencies for all configurations" visibility="private"/>
        <conf name="default" description="Runtime dependencies and master artifact can be used with this conf"
              extends="runtime,master"/>
        <conf name="master"
              description="Contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" description="The dependency is required at compile time." extends="core,optional"/>
        <conf name="runtime" description="The dependency is required at runtime." extends="core"/>
        <conf name="test" description="The dependency required for building/running tests only."
              extends="runtime,compile"/>
        <conf name="optional" description="Contains all optional dependencies"/>
    </configurations>
    <publications/>
    <dependencies>
        <dependency name="layer7-utility" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-common" rev="latest.integration" force="true" conf="core; test->default,test"/>
        <dependency name="layer7-policy" rev="latest.integration" force="true" conf="core; test->default,test"/>
        <dependency name="layer7-gateway-common" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-server" rev="latest.integration" force="true" conf="core; test->default,test"/>

        <dependency org="org.slf4j" name="slf4j-api" rev="1.3.0" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-jdk14" rev="1.3.0" force="true" conf="core"/>
        <dependency org="org.apache.wicket" name="wicket" rev="1.3.4" force="true" conf="core"/>
        <dependency org="org.apache.wicket" name="wicket-ioc" rev="1.3.4" force="true" conf="core"/>
        <dependency org="org.apache.wicket" name="wicket-spring" rev="1.3.4" force="true" conf="core">
            <exclude org="org.springframework" module="spring" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>
        <dependency org="org.apache.wicket" name="wicket-spring-annot" rev="1.3.4" force="true" conf="core">
            <exclude org="org.springframework" module="spring" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>
        <dependency org="org.apache.wicket" name="wicket-extensions" rev="1.3.4" force="true" conf="core"/>
        <dependency org="commons-io" name="commons-io" rev="1.4" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate" rev="3.2.6.ga" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-annotations" rev="3.3.1.GA" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-commons-annotations" rev="3.0.0.ga" force="true" conf="core"/>
        <dependency org="org.apache.derby" name="derby" rev="10.4.1.3" force="true" conf="core"/>
        <dependency org="org.mortbay.jetty" name="jetty" rev="6.1.8" force="true" conf="core"/>
        <dependency org="org.mortbay.jetty" name="jetty-util" rev="6.1.8" force="true" conf="core"/>
        <dependency org="org.mortbay.jetty" name="jetty-ajp" rev="6.1.8" force="true" conf="core"/>
        <dependency org="org.mortbay.jetty" name="jetty-sslengine" rev="6.1.8" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-test" rev="2.5.4" force="true" conf="test"/>
        <dependency org="junit" name="junit" rev="4.4" force="true" conf="test"/>
        <dependency org="jasperreports" name="jasperreports" rev="3.0.0" force="true" conf="core"/>
        <dependency org="mysql" name="mysql-connector-java" rev="5.0.4" force="true" conf="core"/>

        <exclude org="asm" module="asm" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="asm" module="asm-attrs" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
    </dependencies>
</ivy-module>
