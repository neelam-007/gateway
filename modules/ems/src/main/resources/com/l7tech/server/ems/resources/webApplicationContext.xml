<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
    This is a WebApplicationContext for the use of the EMS servlet(s).   The EmsServletContainer and EmsContextLoaderListener
    arrange to have this context's parent set to point to the EMS's global ApplicationContext.

    Any beans defined in this file will be visible only to servlets (or other code that uses WebApplicationContextUtils
    to find the application context).  Beans for the EMS should normally be placed in one of the EMS's global
    context config files instead (ie, emsApplicationContext).
 -->
<beans>
    <!--
      Export Spring Beans to servlet context.
    -->
    <bean class="org.springframework.web.context.support.ServletContextAttributeExporter">
        <property name="attributes">
            <map>
                <entry key="securityManager">
                    <ref bean="securityManager"/>
                </entry>
                <entry key="ssgClusterManager">
                    <ref bean="ssgClusterManager"/>
                </entry>
                <entry key="userPropertyManager">
                    <ref bean="userPropertyManager"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>
