<?xml version="1.0" encoding="UTF-8"?>
<!--
  Ivy module for production modular assertions dependencies.
-->
<ivy-module version="1.0">
    <info organisation="com.l7tech"
          module="layer7-gateway-server-assertions"
          status="integration"
            >
    </info>
    <configurations defaultconfmapping="optional->default">
        <conf name="default" description="Configuration for main assertion modules."/>
        <conf name="client" description="Configuration for client assertion modules."/>
        <conf name="optional" description="Configuration for optional assertion modules."/>
    </configurations>
    <publications/>
    <dependencies>
        <dependency name="RateLimitAssertion" rev="latest.integration" conf="default"/>
        <dependency name="ComparisonAssertion" rev="latest.integration" conf="default"/>
        <dependency name="SnmpTrapAssertion" rev="latest.integration" conf="default"/>
        <dependency name="EchoRoutingAssertion" rev="latest.integration" conf="default"/>
        <dependency name="FtpRoutingAssertion" rev="latest.integration" conf="default"/>
        <dependency name="FtpCredentialAssertion" rev="latest.integration" conf="default"/>
        <dependency name="IdentityAttributesAssertion" rev="latest.integration" conf="default"/>
        <dependency name="WsAddressingAssertion" rev="latest.integration" conf="default"/>
        <dependency name="NcesDecoratorAssertion" rev="latest.integration" conf="default"/>
        <dependency name="NcesValidatorAssertion" rev="latest.integration" conf="default"/>
        <dependency name="LDAPQueryAssertion" rev="latest.integration" conf="default"/>
        <dependency name="EsmAssertion" rev="latest.integration" conf="default"/>
        <dependency name="MessageContextAssertion" rev="latest.integration" conf="default"/>
        <dependency name="SamlpAssertion" rev="latest.integration" conf="default"/>
        <dependency name="CertificateAttributesAssertion" rev="latest.integration" conf="default"/>

        <dependency name="CaWsdmAssertion" rev="latest.integration" conf="optional"/>
    </dependencies>
</ivy-module>
