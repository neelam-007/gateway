<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0">
    <info organisation="com.l7tech"
          module="layer7-modular-assertions"
          status="integration"
            >
    </info>
    <configurations
            defaultconfmapping="compile->default; core->default; runtime->default; test->default; optional->default">
        <conf name="core" description="Core dependencies for all configurations" visibility="private"/>
        <conf name="default" description="Runtime dependencies and master artifact can be used with this conf"
              extends="runtime,master"/>
        <conf name="master"
              description="Contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" description="The dependency is required at compile time." extends="core,optional"/>
        <conf name="runtime" description="The dependency is required at runtime." extends="core"/>
        <conf name="test" description="The dependency required for building/running tests only."
              extends="runtime,compile"/>
        <conf name="optional" description="Contains all optional dependencies"/>
    </configurations>
    <publications/>
    <dependencies>
        <dependency name="layer7-utility" rev="latest.integration" conf="optional"/>
        <dependency name="layer7-common" rev="latest.integration" conf="optional; test->default,test"/>
        <dependency name="layer7-policy" rev="latest.integration" conf="optional; test->default,test"/>
        <dependency name="layer7-policy-exporter" rev="latest.integration" conf="optional"/>
        <dependency name="layer7-gui" rev="latest.integration" conf="optional"/>
        <dependency name="layer7-gateway-common" rev="latest.integration" conf="optional"/>
        <dependency name="layer7-gateway-server" rev="latest.integration"
                    conf="optional; test->default,test"/>
        <dependency name="layer7-proxy" rev="latest.integration"
                    conf="optional; test->default,test"/>
        <dependency name="layer7-gateway-console" rev="latest.integration" conf="optional"/>
        <dependency org="com.intellij" name="forms_rt" rev="11.1.2" force="true" conf="optional"/>
        <dependency org="org.springframework" name="spring-test" rev="3.0.7.RELEASE" force="true" conf="test"/>
        <dependency org="junit" name="junit" rev="4.10" force="true" conf="test"/>

        <exclude org="asm" module="asm" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="asm" module="asm-attrs" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="xerces" module="xmlParserAPIs" artifact="*" type="*" ext="jar" conf="*" matcher="exact" />
    </dependencies>
</ivy-module>
