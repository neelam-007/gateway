<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0">
    <info organisation="com.l7tech"
          module="layer7-gateway-processcontroller"
          status="integration">
    </info>
    <configurations
            defaultconfmapping="compile->default; core->default; runtime->default; test->default; optional->default">
        <conf name="core" description="Core dependencies for all configurations" visibility="private"/>
        <conf name="default" description="Runtime dependencies and master artifact can be used with this conf"
              extends="runtime,master"/>
        <conf name="master"
              description="Contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" description="The dependency is required at compile time." extends="core,optional"/>
        <conf name="runtime" description="The dependency is required at runtime." extends="core"/>
        <conf name="test" description="The dependency required for building/running tests only."
              extends="runtime,compile"/>
        <conf name="optional" description="Contains all optional dependencies"/>
    </configurations>
    <publications>
        <artifact name="layer7-gateway-processcontroller" type="jar" ext="jar" conf="master"/>
    </publications>
    <dependencies>
        <dependency name="layer7-gateway-common" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-config" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-management" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-server" rev="latest.integration" force="true" conf="core->master"/>
        <dependency name="layer7-common" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-utility" rev="latest.integration" force="true" conf="core"/>

        <dependency org="com.l7tech.lib" name="apache-cxf-lib" rev="2.3.3" force="true" conf="core"/>
        <dependency org="com.sun.xml.fastinfoset" name="FastInfoset" rev="1.2.7" force="true" conf="core"/>

        <dependency org="javax.inject" name="javax.inject" rev="1" force="true" conf="core"/>

        <dependency org="org.mortbay.jetty" name="jetty" rev="6.1.26" force="true" conf="core"/>
        <dependency org="org.mortbay.jetty" name="jetty-util" rev="6.1.26" force="true" conf="core"/>

        <dependency org="org.slf4j" name="slf4j-api" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-jdk14" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="log4j-over-slf4j" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.snmp4j" name="snmp4j" rev="1.11.2" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-web" rev="3.0.5.RELEASE" force="true" conf="core"/>

        <dependency org="bouncycastle" name="bcprov-jdk16" rev="1.46" force="true" conf="core"/>

        <!-- Hibernate annotations used on beans that we use, so we need the hibernate JAR to compile -->
        <dependency org="org.hibernate" name="hibernate-core" rev="3.6.1.Final" force="true" conf="compile->master"/>

        <dependency org="org.springframework" name="spring-test" rev="3.0.5.RELEASE" force="true" conf="test"/>
        <dependency org="junit" name="junit" rev="4.8.2" force="true" conf="test"/>

        <exclude org="xerces" module="xmlParserAPIs" artifact="*" type="*" ext="jar" conf="*" matcher="exact" />
        <exclude org="com.sun.xml.fastinfoset" module="FastInfoset" artifact="*" type="*" ext="*" conf="" matcher="exact"/>

        <!-- This needs the signed version of bouncy castle because it registers it as a provider. -->
        <exclude org="bouncycastle" module="bcprov-unsigned-jdk16" artifact="*" type="*" ext="jar" conf="*" matcher="exact" />
        <exclude org="commons-logging" module="commons-logging" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="log4j" module="log4j" artifact="*" type="*" ext="*" conf="" matcher="exact"/>

        <override org="org.mortbay.jetty" module="jetty" matcher="exact" rev="6.1.26"/>

        <conflict org="org.slf4j" module="slf4j-api" rev="1.6.1"/>
    </dependencies>
</ivy-module>
