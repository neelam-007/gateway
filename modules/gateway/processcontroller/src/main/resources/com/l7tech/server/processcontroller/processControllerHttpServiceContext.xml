<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean id='httpServer' class='org.mortbay.jetty.Server' init-method='start'>
        <property name="connectors">
            <list>
                <bean class="org.mortbay.jetty.nio.SelectChannelConnector">
                    <property name="port" value="8765"/>
                    <property name="host" value="localhost"/>
                </bean>
            </list>
        </property>

        <property name="handler" ref="jettyHandler"/>
    </bean>

    <bean id="jettyHandler" class="org.mortbay.jetty.servlet.Context">
        <property name="contextPath" value="/"/>
    </bean>

    <bean id="wsServlet" class="com.sun.xml.ws.transport.http.servlet.WSServlet"/>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="jettyHandler"/>
        <property name="targetMethod" value="addServlet"/>
        <property name="arguments" ref="wsServlet"/>
    </bean>
</beans>