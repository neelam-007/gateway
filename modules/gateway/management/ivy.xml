<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0">
    <info organisation="com.l7tech"
          module="layer7-gateway-management"
          status="integration">
    </info>
    <configurations>
        <include file="../../../etc/build/ivyconfigurations.xml"/>
    </configurations>
    <publications>
        <artifact name="layer7-gateway-management" type="jar" ext="jar" conf="master"/>
        <artifact name="layer7-gateway-management-test" type="jar" ext="jar" conf="test"/>
    </publications>
    <dependencies>
        <dependency name="layer7-gateway-common" rev="latest.integration" conf="core"/>
        <dependency name="layer7-common" rev="latest.integration" conf="core"/>
        <dependency name="layer7-utility" rev="latest.integration" conf="core"/>
        <dependency name="layer7-test" rev="latest.integration" conf="test"/>

        <dependency org="asm" name="asm" rev="3.3.1" force="true" conf="core"/>

        <!-- Hibernate annotations used on beans that we use, so we need the hibernate JAR to compile -->
        <dependency org="org.hibernate" name="hibernate-core" rev="3.6.1.Final" force="true" conf="compile->master"/>
        <dependency org="org.springframework" name="spring-jdbc" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-orm" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-context-support" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-tx" rev="3.0.5.RELEASE" force="true" conf="core"/>
    </dependencies>
</ivy-module>
