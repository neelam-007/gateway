<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0" xmlns:e="http://ant.apache.org/ivy/extra">
    <info organisation="com.l7tech"
          module="layer7-gateway-server"
          status="integration"
          e:title="Gateway"
            >
    </info>
    <!--
      By default map all configurations to themselves, if existing
    -->
    <configurations
            defaultconfmapping="compile->default; core->default; runtime->default; test->default; optional->default">
        <conf name="core" description="Core dependencies for all configurations" visibility="private"/>
        <conf name="default" description="Runtime dependencies and master artifact can be used with this conf"
              extends="runtime,master"/>
        <conf name="master"
              description="Contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" description="The dependency is required at compile time." extends="core,optional"/>
        <conf name="runtime" description="The dependency is required at runtime." extends="core"/>
        <conf name="test" description="The dependency required for building/running tests only."
              extends="runtime,compile"/>
        <conf name="optional" description="Contains all optional dependencies"/>
    </configurations>
    <publications>
        <artifact name="layer7-gateway-server" type="jar" ext="jar" conf="master"/>
        <artifact name="layer7-gateway-server-test" type="jar" ext="jar" conf="test"/>
    </publications>
    <dependencies>
        <dependency name="layer7-gateway-common" rev="latest.integration" force="true" conf="core->default,optional"/>
        <dependency name="layer7-uddi" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-utility" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-common" rev="latest.integration" force="true" conf="core; test->default,test"/>
        <dependency name="layer7-policy" rev="latest.integration" force="true" conf="core; test->default,test"/>
        <dependency name="layer7-proxy" rev="latest.integration" force="true" conf="core; test->default,test"/>
        <dependency name="layer7-wsdl" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-management" rev="latest.integration" force="true" conf="core"/>
        <dependency name="layer7-gateway-reporting" rev="latest.integration" force="true" conf="core"/>

        <dependency org="antlr" name="antlr" rev="2.7.7-l7p1" force="true" conf="core"/>
        <dependency org="commons-configuration" name="commons-configuration" rev="1.3" force="true" conf="core">
            <exclude org="commons-digester" module="commons-digester" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="commons-jxpath" module="commons-jxpath" name="*" type="*" ext="*" conf="" matcher="exact"/>
            <exclude org="commons-logging" module="commons-logging-api" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="commons-beanutils" module="commons-beanutils-core" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="xerces" module="xerces" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>
        <dependency org="c3p0" name="c3p0" rev="0.9.1.2" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-core" rev="3.3.1.GA" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-annotations" rev="3.4.0.GA" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-commons-annotations" rev="3.1.0.GA" force="true" conf="core"/>
        <dependency org="javassist" name="javassist" rev="3.4.GA" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-aop" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-cache" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-common" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-j2ee" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-jmx" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-minimal" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-serialization" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-system" rev="4.0.3" force="true" conf="core"/>
        <dependency org="jgroups" name="jgroups" rev="2.2.9.2" force="true" conf="core"/>
        <dependency org="log4j" name="log4j" rev="1.2.14" force="true" conf="core"/>
        <dependency org="org.apache.mina" name="mina-core" rev="1.1.0" force="true" conf="core"/>
        <dependency org="org.apache.mina" name="mina-filter-ssl" rev="1.1.0" force="true" conf="core"/>
        <dependency org="mysql" name="mysql-connector-java" rev="5.0.4" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-api" rev="1.5.2" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-jdk14" rev="1.5.2" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-jdbc" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-orm" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-context-support" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-test" rev="2.5.6" force="true" conf="test"/>
        <dependency org="org.springframework" name="spring-tx" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-web" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-webmvc" rev="2.5.6" force="true" conf="core"/>
        <dependency org="org.springframework" name="aspectjweaver" rev="2.5.4" force="true" conf="core"/> <!-- Used for parsing pointcut expressions only -->
        <dependency org="cglib" name="cglib-nodep" rev="2.1_3" force="true" conf="core"/>
        <dependency org="com.tarari" name="tarari-raxj" rev="4.4.3.31" force="true" conf="optional"/>
        <dependency org="trove" name="trove" rev="1.0.2" force="true" conf="core"/>
        <dependency org="org.apache.ftpserver" name="ftpserver-parent" rev="1.0-543677-20070601" force="true"
                    conf="core"/>

        <dependency org="org.apache.tomcat" name="annotations-api" rev="6.0.13" force="true" conf="core"/>

        <dependency org="org.apache.tomcat" name="tomcat" rev="6.0.13" force="true" conf="core">
            <exclude org="org.apache.tomcat" module="servlet-api" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>
        <dependency org="jasperreports" name="jasperreports" rev="3.1.2-p1" force="true" conf="core"/>
        <dependency org="com.ibm.mq" name="mq6" rev="6.0.2.2" force="true" conf="optional"/>
        <dependency org="com.tibco" name="jms" rev="1.5" force="true" conf="optional"/>
        <dependency org="junit" name="junit" rev="4.4" force="true" conf="test"/>
        <dependency org="com.l7tech.lib" name="apache-cxf-lib" rev="2.1.3" force="true" conf="core"/>
        <dependency org="com.jscape" name="sftp" rev="7.0.2" force="true" conf="core"/>
        <dependency org="fiorano" name="fmq-client" rev="1.0-4507" force="true" conf="optional"/>
        <dependency org="fiorano" name="fiorano-framework" rev="1.0-4507" force="true" conf="optional"/>
        
        <exclude org="asm" module="asm" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="asm" module="asm-attrs" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="com.sun.xml.fastinfoset" module="FastInfoset" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="org.apache.cxf" module="cxf-rt-transports-http-jetty" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="xerces" module="xmlParserAPIs" artifact="*" type="*" ext="jar" conf="*" matcher="exact" />
    </dependencies>
</ivy-module>
