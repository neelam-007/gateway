<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.0" xmlns:e="http://ant.apache.org/ivy/extra">
    <info organisation="com.l7tech"
          module="layer7-gateway-server"
          status="integration"
          e:title="Gateway"
            >
    </info>
    <configurations
            defaultconfmapping="compile->default; core->default; runtime->default; test->[org=com.l7tech]test,default; optional->default; alternative->default">
        <conf name="core" description="Core dependencies for all configurations" visibility="private"/>
        <conf name="default" description="Runtime dependencies and master artifact can be used with this conf"
              extends="runtime,master"/>
        <conf name="master"
              description="Contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" description="The dependency is required at compile time." extends="core,optional"/>
        <conf name="runtime" description="The dependency is required at runtime." extends="core"/>
        <conf name="test" description="The dependency required for building/running tests only."
              extends="runtime,compile"/>
        <conf name="optional" description="Contains all optional dependencies"/>
        <conf name="alternative" description="Contains all dependencies for jars with alternative implementations"/>
    </configurations>
    <publications>
        <artifact name="layer7-gateway-server" type="jar" ext="jar" conf="master"/>
        <artifact name="layer7-gateway-server-test" type="jar" ext="jar" conf="test"/>
    </publications>
    <dependencies>
        <!-- Module dependencies -->
        <dependency name="layer7-gateway-common" rev="latest.integration" conf="core->default,optional; test->default,test,optional"/>
        <dependency name="layer7-uddi" rev="latest.integration" conf="core"/>
        <dependency name="layer7-utility" rev="latest.integration" conf="core; test->default,test"/>
        <dependency name="layer7-common" rev="latest.integration" conf="core; test->default,test"/>
        <dependency name="layer7-policy" rev="latest.integration" conf="core; test->default,test"/>
        <dependency name="layer7-proxy" rev="latest.integration" conf="core; test->default,test"/>
        <dependency name="layer7-wsdl" rev="latest.integration" conf="core"/>
        <dependency name="layer7-gateway-management" rev="latest.integration" conf="core"/>
        <dependency name="layer7-gateway-reporting" rev="latest.integration" conf="core"/>
        <dependency name="layer7-gateway-sca-common" rev="latest.integration" conf="core"/>

        <!-- Dependencies -->
        <dependency org="com.l7tech.lib" name="layer7-sun-jaxws" rev="1.0" conf="core"/> <!-- should be before CXF in classpath -->
        <dependency org="antlr" name="antlr" rev="2.7.7-l7p1" force="true" conf="core"/>
        <dependency org="com.jscape" name="sftp" rev="8.8.0" force="true" conf="core"/>
        <dependency org="com.l7tech.lib" name="apache-cxf-lib" rev="2.3.3" force="true" conf="core"/>
        <dependency org="commons-configuration" name="commons-configuration" rev="1.6" force="true" conf="core">
            <exclude org="commons-digester" module="commons-digester" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="commons-jxpath" module="commons-jxpath" name="*" type="*" ext="*" conf="" matcher="exact"/>
            <exclude org="commons-logging" module="commons-logging-api" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="commons-beanutils" module="commons-beanutils-core" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
            <exclude org="xerces" module="xerces" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>
        <dependency org="cglib" name="cglib-nodep" rev="2.2" force="true" conf="core"/>
        <dependency org="c3p0" name="c3p0" rev="0.9.1.2" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-core" rev="3.6.1.Final" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-commons-annotations" rev="3.2.0.Final" force="true" conf="core"/>
        <dependency org="org.hibernate" name="hibernate-validator" rev="4.1.0.Final" force="true" conf="core">
            <exclude org="org.slf4j" module="slf4j-api" name="*" type="*" ext="*" conf=""
                     matcher="exact"/>
        </dependency>        
        <dependency org="jasperreports" name="jasperreports" rev="3.1.2-p1" force="true" conf="core"/>
        <dependency org="javax.inject" name="javax.inject" rev="1" force="true" conf="core"/>
        <dependency org="org.javassist" name="javassist" rev="3.14.0-GA" force="true" conf="core"/>
        <dependency org="jboss" name="jboss-j2ee" rev="4.0.3" force="true" conf="core"/>
        <dependency org="org.jboss.cache" name="jbosscache-core" rev="3.2.5.GA" force="true" conf="core"/>
        <dependency org="org.apache.mina" name="mina-core" rev="1.1.7" force="true" conf="core"/>
        <dependency org="org.apache.mina" name="mina-filter-ssl" rev="1.1.7" force="true" conf="core"/>
        <dependency org="mysql" name="mysql-connector-java" rev="5.1.15" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-api" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="slf4j-jdk14" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.slf4j" name="log4j-over-slf4j" rev="1.6.1" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-jdbc" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-orm" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-context-support" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-tx" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-web" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.springframework" name="spring-webmvc" rev="3.0.5.RELEASE" force="true" conf="core"/>
        <dependency org="org.aspectj" name="aspectjweaver" rev="1.6.8" force="true" conf="core"/> <!-- Used for parsing pointcut expressions only -->
        <dependency org="org.apache.ftpserver" name="ftpserver-parent" rev="1.0-543677-20070601" force="true"
                    conf="core"/>
        <dependency org="org.apache.tomcat" name="annotations-api" rev="6.0.32" force="true" conf="core"/>
        <dependency org="org.apache.tomcat" name="catalina" rev="6.0.32" force="true" conf="core"/>
        <dependency org="org.apache.tomcat" name="coyote" rev="6.0.32" force="true" conf="core"/>

        <!-- Optional dependencies -->
        <dependency org="com.ibm.mq" name="mq6" rev="6.0.2.2" force="true" conf="optional"/>
        <dependency org="com.tarari" name="tarari-raxj" rev="4.4.3.31" force="true" conf="optional"/>
        <dependency org="com.tibco" name="jms" rev="1.5" force="true" conf="optional"/>
        <dependency org="fiorano" name="fmq-client" rev="1.0-4507" force="true" conf="optional"/>
        <dependency org="fiorano" name="fiorano-framework" rev="1.0-4507" force="true" conf="optional"/>

        <!-- Alternative dependencies -->
        <dependency org="com.rsa" name="jsafe-jce" rev="4.1.0.1" force="true" conf="alternative"/>
        <dependency org="com.rsa" name="jsafe-jce-fips" rev="4.1" force="true" conf="alternative"/>
        <dependency org="com.rsa" name="certj" rev="3.1" force="true" conf="test,alternative"/>
        <dependency org="com.rsa" name="sslj" rev="5.1.1" force="true" conf="test,alternative"/>

        <!-- Test dependencies -->
        <dependency org="org.apache.cxf" name="cxf-rt-transports-local" rev="2.3.3" force="true" conf="test"/>
        <!-- apacheds-server-integ is used for LdapIdentityProviderTest but not currently in our repository -->
        <!--<dependency org="org.apache.directory.server" name="apacheds-server-integ" rev="1.5.5" force="true" conf="test"/>-->
        <dependency org="org.springframework" name="spring-test" rev="3.0.5.RELEASE" force="true" conf="test"/>
       
        <!-- Exclusions --> 
        <exclude org="asm" module="asm-attrs" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="com.sun.xml.fastinfoset" module="FastInfoset" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="commons-logging" module="commons-logging" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="log4j" module="log4j" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="org.apache.cxf" module="cxf-rt-transports-http-jetty" artifact="*" type="*" ext="*" conf="" matcher="exact"/>
        <exclude org="xerces" module="xmlParserAPIs" artifact="*" type="*" ext="jar" conf="*" matcher="exact" />

        <conflict org="org.slf4j" module="slf4j-api" rev="1.6.1"/>
        <conflict org="wsdl4j" module="wsdl4j" rev="1.6.2-l7p3"/>
    </dependencies>
</ivy-module>
