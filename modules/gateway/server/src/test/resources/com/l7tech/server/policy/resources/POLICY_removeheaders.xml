<?xml version="1.0" encoding="UTF-8"?>
<!--
  Policy to remove WS-Security headers from the request and response messages.
-->
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:WsSecurity>
            <L7p:ApplyWsSecurity booleanValue="false"/>
            <L7p:RemoveUnmatchedSecurityHeaders booleanValue="true"/>
            <L7p:ReplaceSecurityHeader booleanValue="false"/>
            <L7p:UseSecurityHeaderMustUnderstand booleanValue="false"/>
        </L7p:WsSecurity>
        <L7p:HardcodedResponse>
            <L7p:Base64ResponseBody stringValue=""/>
        </L7p:HardcodedResponse>
        <L7p:WsSecurity>
            <L7p:ApplyWsSecurity booleanValue="false"/>
            <L7p:RemoveUnmatchedSecurityHeaders booleanValue="true"/>
            <L7p:ReplaceSecurityHeader booleanValue="false"/>
            <L7p:Target target="RESPONSE"/>
            <L7p:UseSecurityHeaderMustUnderstand booleanValue="false"/>
        </L7p:WsSecurity>
    </wsp:All>
</wsp:Policy>
