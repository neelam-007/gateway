<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--suppress PlaceholderValuesInspection -->
<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/Service" value-ref="serviceAdminWS"/>
            </map>
        </property>
    </bean>

    <!-- Declare a parent bean with all properties common to both services -->
    <bean id="serviceAdminWS" class="org.codehaus.xfire.spring.remoting.XFireExporter">
        <property name="name" value="Service"/>
        <property name="namespace" value="http://ns.l7tech.com/SecureSpan/admin/service/0.1"/>
        <property name="serviceFactory" ref="xfire.serviceFactory"/>
        <property name="xfire" ref="xfire"/>
        <property name="serviceBean" ref="serviceAdmin"/>
        <property name="serviceClass" value="com.l7tech.gateway.common.service.ServiceAdminPublic"/>
    </bean>
</beans>
