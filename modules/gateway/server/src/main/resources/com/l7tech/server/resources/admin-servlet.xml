<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="httpInvokerParent" abstract="true">
        <property name="remoteInvocationExecutor">
            <bean class="com.l7tech.gateway.common.spring.remoting.http.SecureRemoteInvocationExecutor">
                <constructor-arg ref="remotingProvider"/>
            </bean>
        </property>
    </bean>

    <bean name="/AdminLogin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="adminLogin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.admin.AdminLogin"/>
    </bean>

    <bean name="/IdentityAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="identityAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.admin.IdentityAdmin"/>
    </bean>

    <bean name="/AuditAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="auditAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.audit.AuditAdmin"/>
    </bean>

    <bean name="/ServiceAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="serviceAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.service.ServiceAdmin"/>
    </bean>

    <bean name="/SchemaAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="schemaAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.schema.SchemaAdmin"/>
    </bean>

    <bean name="/FtpAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="ftpAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.transport.ftp.FtpAdmin"/>
    </bean>

    <bean name="/JmsAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="jmsAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.transport.jms.JmsAdmin"/>
    </bean>

    <bean name="/TrustedCertAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="trustedCertAdmin"/>
