    </bean>

    <bean name="/LogSinkAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="logSinkAdmin"/>
        <property name="serviceInterface" value="com.l7tech.gateway.common.log.LogSinkAdmin"/>
    </bean>

</beans>
