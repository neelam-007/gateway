<?xml version="1.0" encoding="UTF-8"?>
<optionSet id="appliance" parentName="GatewayBaseConfiguration.xml">
    <description>
----------------------------------------------------------------------
SecureSpan Gateway Configuration
----------------------------------------------------------------------</description>
    <prompt>
----------------------------------------------------------------------
Configure SecureSpan Gateway
----------------------------------------------------------------------
At any time type "quit" to quit.</prompt>

    <optionGroup id="node">
        <description>Node Configuration</description>
        <prompt>
-------------------
Set Up the SSG Node
-------------------
At any time type "quit" to quit.
Press "&lt;" to go to the previous step.

This step lets you set up the SSG node.</prompt>
    </optionGroup>
    <!--
      Options for node
    -->
    <option id="node-enable" group="node" type="BOOLEAN" order="400" name="Enabled">
        <configName>node.enable</configName>
        <configValue>true</configValue>
        <description>Node Enabled State</description>
        <prompt>Enable or disable the node.</prompt>
    </option>

</optionSet>
