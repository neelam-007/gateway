<?xml version="1.0" encoding="UTF-8"?>
<optionSet id="appliance" parentName="GatewayBaseConfiguration.xml">
    <description>
----------------------------------------------------------------------
SecureSpan Gateway Configuration
----------------------------------------------------------------------</description>
    <prompt>
----------------------------------------------------------------------
Configure SecureSpan Gateway
----------------------------------------------------------------------
At any time type "quit" to quit.</prompt>

    <optionGroup id="db-fail" required="false">
        <description>Configure Database Failover Connection</description>
        <prompt>
--------------------------------
Set Up the SSG Failover Database
--------------------------------
At any time type "quit" to quit.
Press "&lt;" to go to the previous step.

This step lets you create or set up a connection to the SSG failover
database.</prompt>
    </optionGroup>
    <optionGroup id="node">
        <description>Node Configuration</description>
        <prompt>
-------------------
Set Up the SSG Node
-------------------
At any time type "quit" to quit.
Press "&lt;" to go to the previous step.

This step lets you set up the SSG node.</prompt>
    </optionGroup>

    <!--
      Options for Database failover configuration
    -->
    <option id="db-fail-host" group="db-fail" type="HOSTNAME" order="120" name="Database Failover Host">
        <configName>database.failover.host</configName>
        <description>Database Failover Hostname</description>
        <prompt>Enter the database failover hostname.</prompt>
    </option>
    <option id="db-fail-port" group="db-fail" type="PORT" order="121" name="Database Failover Port">
        <configName>database.failover.port</configName>
        <configValue>3306</configValue>
        <description>Database Failover Port</description>
        <prompt>Enter the database failover port.</prompt>
    </option>

    <!--
      Options for node
    -->
    <option id="node-enable" group="node" type="BOOLEAN" order="400" name="Enabled">
        <configName>node.enable</configName>
        <configValue>true</configValue>
        <description>Node Enabled State</description>
        <prompt>Enable or disable the node.</prompt>
    </option>

</optionSet>
