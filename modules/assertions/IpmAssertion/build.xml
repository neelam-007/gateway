<?xml version="1.0" encoding="UTF-8"?>
<!-- Ant build file for the modular IpmAssertion. -->
<project name="module.assertion.Ipm" default="package" basedir=".">

    <description>
      Builds the modular IpmAssertion.
    </description>

    <property name="UneasyRooster.dir" location="../../.."/>
    <property name="moduleName" value="IpmAssertion"/>
    <property name="assertionList" value="com.l7tech.external.assertions.ipm.${moduleName}"/>
    <property name="build.classes" location="build/classes"/>


    <import file="../assertion-build.xml"/>


    <target name="test" depends="-compile-tests">
        <junit printsummary="yes" haltonfailure="yes" fork="off" errorproperty="test.error" failureproperty="test.failure">
            <classpath>
                <path refid="compile.test.classpath"/>
                <pathelement location="${UneasyRooster.dir}/build/test-classes"/>
                <pathelement location="${build.classes}"/>
                <pathelement location="${build.classes}-test"/>
            </classpath>
            <formatter type="plain" unless="build.junit.xmlformat"/>
            <formatter type="xml" if="build.junit.xmlformat"/>
            <test name="com.l7tech.external.assertions.ipm.server.CodegenTest" haltonfailure="no"/>
            <test name="com.l7tech.external.assertions.ipm.server.TemplateCompilerTest" haltonfailure="no"/>
            <test name="com.l7tech.external.assertions.ipm.server.ServerIpmAssertionTest" haltonfailure="no"/>
        </junit>
        <checkfail/>
    </target>


</project>