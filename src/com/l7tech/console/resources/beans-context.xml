<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="ssmApplication" class="com.l7tech.console.SsmApplication">
    </bean>

    <bean id="securityProvider" class="com.l7tech.console.security.SecurityProviderImpl">
    </bean>

    <bean id="clientCertManager" class="com.l7tech.identity.cert.ClientCertManagerRemote">
    </bean>

    <bean id="registry" class="com.l7tech.console.util.registry.RegistryImpl">
    </bean>

    <bean id="preferences" class="com.l7tech.console.util.Preferences" factory-method="getPreferences">
    </bean>

    <bean id="rmiClientSocketFactory" class="com.l7tech.remote.rmi.ssl.SslRMIClientSocketFactory"/>

    <bean id="adminLogin" class="com.l7tech.remote.rmi.EditableRmiProxyFactoryBean">
        <property name="serviceInterface">
            <value>com.l7tech.admin.AdminLogin</value>
        </property>
        <property name="lookupStubOnStartup"><value>false</value></property>
        <property name="registryClientSocketFactory"><ref bean="rmiClientSocketFactory"/></property>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
         <property name="targetClass"><value>com.l7tech.console.util.Registry</value></property>
         <property name="targetMethod"><value>setDefault</value></property>
         <property name="arguments">
            <list>
                <ref local="registry"/>
            </list>
        </property>
    </bean>
</beans>
