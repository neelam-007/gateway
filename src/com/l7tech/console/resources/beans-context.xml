<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="securityProvider" class="com.l7tech.console.security.SecurityProviderImpl"/>

    <bean id="registry" class="com.l7tech.console.util.registry.RegistryImpl"/>

    <!--
      NOTE: The actual host we connect to is not called "securespangateway"
            The protocol used in the urls below is ignored, we always connect with https.
    -->

    <bean id="adminLogin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/AdminLogin"/>
        <property name="serviceInterface" value="com.l7tech.admin.AdminLogin"/>
    </bean>

    <bean id="identityAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/IdentityAdmin"/>
        <property name="serviceInterface" value="com.l7tech.identity.IdentityAdmin"/>
    </bean>

    <bean id="auditAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/AuditAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.audit.AuditAdmin"/>
    </bean>

    <bean id="schemaAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/SchemaAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.xml.schema.SchemaAdmin"/>
    </bean>

    <bean id="jmsAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/JmsAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.jms.JmsAdmin"/>
    </bean>

    <bean id="ftpAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/FtpAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.ftp.FtpAdmin"/>
    </bean>

    <bean id="trustedCertAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/TrustedCertAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.TrustedCertAdmin"/>
    </bean>

    <bean id="customAssertionsRegistrar" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/CustomAssertionsRegistrar"/>
        <property name="serviceInterface" value="com.l7tech.policy.assertion.ext.CustomAssertionsRegistrar"/>
    </bean>

    <bean id="kerberosAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/KerberosAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.kerberos.KerberosAdmin"/>
    </bean>

    <bean id="clusterStatusAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/ClusterStatusAdmin"/>
        <property name="serviceInterface" value="com.l7tech.cluster.ClusterStatusAdmin"/>
    </bean>

    <bean id="rbacAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/RbacAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.rbac.RbacAdmin"/>
    </bean>

    <bean id="transportAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/TransportAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.TransportAdmin"/>
    </bean>

    <bean id="policyAdmin" class="com.l7tech.console.policy.InvalidatingPolicyAdmin">
        <constructor-arg>
            <bean parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
                <property name="serviceUrl" value="https://securespangateway/ssg/manager/PolicyAdmin"/>
                <property name="serviceInterface" value="com.l7tech.common.policy.PolicyAdmin"/>
            </bean>
        </constructor-arg>
        <constructor-arg ref="managerPolicyCache"/>
    </bean>

    <bean id="logSinkAdmin" parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="https://securespangateway/ssg/manager/LogSinkAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.log.LogSinkAdmin"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
         <property name="targetClass" value="com.l7tech.console.util.Registry"/>
         <property name="targetMethod" value="setDefault"/>
         <property name="arguments">
            <list>
                <ref local="registry"/>
            </list>
        </property>
    </bean>

    <bean id="assertionRegistry" class="com.l7tech.console.policy.ConsoleAssertionRegistry"/>

    <bean id="wspReader" class="com.l7tech.policy.wsp.WspReader">
        <constructor-arg ref="assertionRegistry"/>
    </bean>

    <bean id="defaultPolicyValidator" class="com.l7tech.policy.validator.DefaultPolicyValidator">
        <constructor-arg ref="managerPolicyCache"/>
        <constructor-arg ref="policyPathBuilderFactory"/>
    </bean>

    <bean id="policyPathBuilderFactory" class="com.l7tech.policy.PolicyPathBuilderFactory">
        <constructor-arg ref="managerPolicyCache"/>
    </bean>

    <bean id="managerPolicyCache" class="com.l7tech.console.policy.ManagerPolicyCache"/>

    <bean id="serviceAdmin" class="com.l7tech.console.util.WsdlImportStrategyServiceAdmin">
        <constructor-arg>
            <bean parent="invokerCommon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
                <property name="serviceUrl" value="https://securespangateway/ssg/manager/ServiceAdmin"/>
                <property name="serviceInterface" value="com.l7tech.service.ServiceAdmin"/>
            </bean>
        </constructor-arg>
    </bean>
</beans>
