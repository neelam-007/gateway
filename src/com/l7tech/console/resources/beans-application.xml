<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="ssmApplication" class="com.l7tech.console.SsmApplicationHeavy">
    </bean>

    <bean id="preferences" class="com.l7tech.console.util.HeavySsmPreferences"/>

    <bean id="httpRequestExecutor" class="com.l7tech.spring.remoting.http.SecureHttpInvokerRequestExecutor">
        <constructor-arg>
            <ref bean="httpClient"/>
        </constructor-arg>
        <constructor-arg>
            <value>SecureSpan-Manager/3.6</value>
        </constructor-arg>
    </bean>

    <bean id="httpClient" class="com.l7tech.spring.remoting.http.SecureHttpClient"/>

    <!-- shared invoker properties, inherited with parent= -->
    <bean id="invokerCommon" abstract="true">
        <property name="httpInvokerRequestExecutor">
            <ref bean="httpRequestExecutor"/>
        </property>
        <property name="codebaseUrl">
            <value>must not be empty</value>
        </property>
    </bean>

</beans>
