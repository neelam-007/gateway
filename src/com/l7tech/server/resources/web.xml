        <error-code>410</error-code>
        <location>/ssg/error</location>
    </error-page>
    <error-page>
        <error-code>411</error-code>
        <location>/ssg/error</location>
    </error-page>
    <error-page>
        <error-code>412</error-code>
        <location>/ssg/error</location>
    </error-page>
