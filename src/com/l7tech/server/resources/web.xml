        <location>/ssg/error</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/ssg/error</location>
    </error-page>
    <error-page>
        <error-code>409</error-code>
        <location>/ssg/error</location>
    </error-page>
