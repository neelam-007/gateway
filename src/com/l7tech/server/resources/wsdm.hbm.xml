<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">

    <class name="com.l7tech.server.wsdm.subscription.Subscription" table="wsdm_subscription">
        <id name="oid" column="objectid" type="long" unsaved-value="-1">
            <generator class="hilo"/>
        </id>

        <version name="version" column="version" type="integer"/>

        <property name="uuid" type="string" length="36" not-null="true" unique="true"/>
        <property name="referenceCallback" column="callback_url" type="string" length="255" not-null="true"/>
        <property name="publishedServiceOid" column="published_service_oid" type="long" not-null="true"/>
        <property name="termination" column="termination_time" type="long" not-null="true"/>
        <property name="topic" column="topic" type="int" not-null="true"/>
        <property name="notificationPolicyGuid" column="notification_policy_guid" type="string" length="36"/>
        <property name="lastNotificationTime" column="last_notification" type="long"/>
        <property name="ownerNodeId" column="owner_node_id" type="string" length="64"/>
    </class>

</hibernate-mapping>