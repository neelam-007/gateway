<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="httpInvokerParent" abstract="true">
        <property name="remoteInvocationExecutor">
            <bean class="com.l7tech.spring.remoting.http.SecureRemoteInvocationExecutor">
                <constructor-arg ref="licenseManager"/>
            </bean>
        </property>
    </bean>

    <bean name="/AdminLogin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="adminLogin"/>
        <property name="serviceInterface" value="com.l7tech.admin.AdminLogin"/>
    </bean>

    <bean name="/IdentityAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="identityAdmin"/>
        <property name="serviceInterface" value="com.l7tech.identity.IdentityAdmin"/>
    </bean>

    <bean name="/AuditAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="auditAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.audit.AuditAdmin"/>
    </bean>

    <bean name="/ServiceAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="serviceAdmin"/>
        <property name="serviceInterface" value="com.l7tech.service.ServiceAdmin"/>
    </bean>

    <bean name="/SchemaAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="schemaAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.xml.schema.SchemaAdmin"/>
    </bean>

    <bean name="/FtpAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="ftpAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.ftp.FtpAdmin"/>
    </bean>

    <bean name="/JmsAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="jmsAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.jms.JmsAdmin"/>
    </bean>

    <bean name="/TrustedCertAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="trustedCertAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.TrustedCertAdmin"/>
    </bean>

    <bean name="/CustomAssertionsRegistrar" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="customAssertionsAdmin"/>
        <property name="serviceInterface" value="com.l7tech.policy.assertion.ext.CustomAssertionsRegistrar"/>
    </bean>

    <bean name="/KerberosAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="kerberosAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.kerberos.KerberosAdmin"/>
    </bean>

    <bean name="/ClusterStatusAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="clusterStatusAdmin"/>
        <property name="serviceInterface" value="com.l7tech.cluster.ClusterStatusAdmin"/>
    </bean>   

    <bean name="/RbacAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="rbacAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.security.rbac.RbacAdmin"/>
    </bean>

    <bean name="/PolicyAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="policyAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.policy.PolicyAdmin"/>
    </bean>

    <bean name="/TransportAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="transportAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.transport.TransportAdmin"/>
    </bean>

    <bean name="/LogSinkAdmin" parent="httpInvokerParent" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="logSinkAdmin"/>
        <property name="serviceInterface" value="com.l7tech.common.log.LogSinkAdmin"/>
    </bean>

</beans>
